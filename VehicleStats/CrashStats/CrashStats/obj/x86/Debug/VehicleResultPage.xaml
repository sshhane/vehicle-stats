    <StackPanel x:ConnectionId='2' x:Name="StackResults" Orientation="Vertical" Background="Gainsboro">
        <Image x:ConnectionId='3' x:Name="ImgCarCrash" Stretch="Uniform"></Image>
        <TextBlock x:ConnectionId='4' Name="TxtBoxDesc" Text="" Foreground="Teal" FontSize="15"/>

        <Grid Background="White" Margin="150,0,601,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock x:ConnectionId='6' Name="TxtBoxFcdr" Text="" Foreground="Teal" FontSize="15" Grid.Column="0" Grid.Row="0" />
            <TextBlock x:ConnectionId='7' Name="TxtBoxFcpr" Text="" Foreground="Teal" FontSize="15" Grid.Column="0" Grid.Row="1" />
            <TextBlock x:ConnectionId='8' Name="TxtBoxScdr" Text="" Foreground="Teal" FontSize="15" Grid.Column="0" Grid.Row="2" />
            <TextBlock x:ConnectionId='9' Name="TxtBoxScpr" Text="" Foreground="Teal" FontSize="15" Grid.Column="0" Grid.Row="3" />
            <TextBlock x:ConnectionId='10' Name="TxtBoxRoll" Text="" Foreground="Teal" FontSize="15" Grid.Column="0" Grid.Row="4" />

            <RatingControl x:ConnectionId='11' Width="120" Height="40" Value="{Binding RatingValue}" x:Name="fcdrRating" IsReadOnly="True" Grid.Column="1" Grid.Row="0" />
            <RatingControl x:ConnectionId='12' Width="120" Height="40" Value="{Binding RatingValue}" x:Name="fcprRating" IsReadOnly="True" Grid.Column="1" Grid.Row="1" />
            <RatingControl x:ConnectionId='13' Width="120" Height="40" Value="{Binding RatingValue}" x:Name="scdrRating" IsReadOnly="True" Grid.Column="1" Grid.Row="2" />
            <RatingControl x:ConnectionId='14' Width="120" Height="40" Value="{Binding RatingValue}" x:Name="scprRating" IsReadOnly="True" Grid.Column="1" Grid.Row="3" />
            <RatingControl x:ConnectionId='15' Width="120" Height="40" Value="{Binding RatingValue}" x:Name="rollRating" IsReadOnly="True" Grid.Column="1" Grid.Row="4" />
        </Grid>
        
